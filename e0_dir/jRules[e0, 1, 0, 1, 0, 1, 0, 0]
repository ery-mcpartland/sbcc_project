{j[e0, (n1_)?Positive, (n2_)?NonPositive, (n3_)?Positive, (n4_)?NonPositive, 
    (n5_)?Positive, (n6_)?NonPositive, (n7_)?NonPositive] /; True :> 
  Expand[j[e0, n2, n1, n5, n4, n3, 0, 0]/((-j[e0, 0, 0, 0, 0, 0, 0, -1])^n7*
     (-j[e0, 0, 0, 0, 0, 0, -1, 0] + j[e0, 0, 0, 0, 0, 0, 0, 0]*
        (-sp[p, q] + sp[q, q]))^n6)]}
